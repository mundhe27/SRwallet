<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Permissions">

    <TextView
            android:id="@+id/setperm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Set Permission for Users"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/depolayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/setperm"
            app:layout_constraintBottom_toTopOf="parent"
            android:layout_marginBottom="400dp"
            >

        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp">

                <TextView
                        android:id="@+id/txt_Depotag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Deposit"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_gravity="start|center"
                        android:gravity="center_vertical" />

                <ToggleButton
                        android:id="@+id/depotoggle"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:layout_gravity="end"
                       android:gravity="center"/>

            </FrameLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/insaurancelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/depolayout"
            >

        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp">

                <TextView
                        android:id="@+id/txt_insaurancetag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/insurance"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_gravity="start|center"
                        android:gravity="center_vertical" />

                <ToggleButton
                        android:id="@+id/insaurancetoggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center"/>

            </FrameLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/loanlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/insaurancelayout"
            >

        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp">

                <TextView
                        android:id="@+id/txt_loantag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loans"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_gravity="start|center"
                        android:gravity="center_vertical" />

                <ToggleButton
                        android:id="@+id/loantoggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center"/>

            </FrameLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/sharelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/loanlayout"
            >

        <com.google.android.material.bottomappbar.BottomAppBar
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp">

                <TextView
                        android:id="@+id/txt_sharetag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_gravity="start|center"
                        android:gravity="center_vertical" />

                <ToggleButton
                        android:id="@+id/sharetoggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center"/>

            </FrameLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
            android:id="@+id/Button_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sharelayout"
            app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>